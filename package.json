{
  "name": "md-puml",
  "version": "0.1.1",
  "description": "Converting plantUML in Markdown files on the fly",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "!dist/**/*.test.js",
    "!dist/**/*.test.ts"
  ],
  "bin": {
    "md-puml": "./dist/index.js"
  },
  "scripts": {
    "test": "ava",
    "prebuild": "rm -rf dist",
    "build": "tsc",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lumio/md-puml.git"
  },
  "keywords": [
    "puml"
  ],
  "author": "Benjamin Falk <lumio@lumio.at>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lumio/md-puml/issues"
  },
  "homepage": "https://github.com/lumio/md-puml#readme",
  "ava": {
    "files": [
      "src/**/*.test.ts"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "devDependencies": {
    "@types/node": "^16.11.2",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "ava": "^3.15.0",
    "eslint": "^8.0.1",
    "prettier": "^2.4.1",
    "ts-node": "^10.3.1",
    "typescript": "^4.4.4"
  }
}
